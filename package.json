{
  "name": "whispr",
  "version": "1.0.0",
  "description": "Whispr - Personal AI Chatbot built with Electron and React",
  "main": "public/main.js",
  "homepage": "./",
  "scripts": {
    "start": "concurrently \"npm run react-start\" \"wait-on http://localhost:3000 && npm run electron-portable\"",
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "electron-build": "npm run react-build && electron-builder",
    "electron-dev": "ELECTRON_IS_DEV=true electron .",
    "electron-portable": "cd Whispr-Portable && electron .",
    "build": "npm run react-build",
    "dist": "echo 'Use the Whispr-Portable folder instead!'",
    "pack": "echo 'Use the Whispr-Portable folder instead!'"
  },
  "keywords": [
    "electron",
    "react",
    "chatbot",
    "desktop",
    "whispr",
    "ai"
  ],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "concurrently": "^8.2.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.0",
    "wait-on": "^7.0.0"
  },
  "dependencies": {
    "@google/generative-ai": "^0.2.1",
    "autoprefixer": "^10.4.0",
    "dotenv": "^16.5.0",
    "postcss": "^8.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "tailwindcss": "^3.3.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.yourcompany.whispr",
    "productName": "Whispr Personal AI Chatbot",
          "directories": {
        "output": "dist-production"
      },
    "files": [
      "build/**/*",
      "public/main.js",
      "public/preload.js",
      "src/Image/**/*",
      "node_modules/**/*",
      "!node_modules/.cache"
    ],
    "extraMetadata": {
      "main": "public/main.js"
    },
    "extraFiles": [
      {
        "from": ".env",
        "to": "public/.env"
      },
      {
        "from": ".env",
        "to": ".env"
      }
    ],
    "icon": "src/Image/Whispr-no-bg.png",
    "win": {
      "target": "portable",
      "publish": null,
      "sign": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
